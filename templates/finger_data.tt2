[%- USE DBI( dbh = dbh ) -%]
[%- USE format -%]
[%- finger_line = format("%-10s %-18s %-10s %s") -%]
[% FOREACH host IN DBI.query("select d.device_name, d.contact, p.room, d.comments from devices d join places p using (place_id) order by device_name") -%]
[% finger_line(host.device_name, host.contact, host.room, host.comments) -%]
[% END -%]
