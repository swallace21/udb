<?xml version="1.0" encoding="UTF-8"?>
<!--
FILE: [% filename %]
DESCR: wpkg hosts.xml generated by udb
DATE: [% date %]
-->

<wpkg>

[% FOREACH host IN hosts -%]
  <host name="[% host.hostname %]" profile-id="[% host.first_profile %]">
[% FOREACH profile IN host.other_profiles -%]
    <profile id="[% profile %]" />
[% END -%]
  </host>
[% END -%]

</wpkg>

