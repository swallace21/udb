#!/usr/bin/perl -w

use Getopt::Long;
use Pod::Usage;

use lib "/home/aleks/pro/tstaff/udb/lib";
use BrownCS::UDB;
use BrownCS::UDB::Util qw(ask_password ask confirm edit);
use BrownCS::UDB::DbBase;

use DBI qw(:sql_types);
use DBD::Pg qw(:pg_types);
use Data::Dumper;

# Print a simple help message.
sub usage {
  my ($exit_status) = @_;
  pod2usage({ -exitval => $exit_status, -verbose => 99, -sections => "SYNOPSIS|DESCRIPTION|OPTIONS"});
}

my $help = 0;
my $username = $ENV{'USER'};
my $udb = BrownCS::UDB->new;

GetOptions ('help|h|?' => \$help, 
            'u' => \$username) or usage(2);
usage(1) if $help;

my $hostname;

if (@ARGV > 1) {
  usage(2);
} elsif (@ARGV > 0) {
  $hostname = shift;
}

my $password = &ask_password;

$udb->start($username, $password);

my $host = {};

my $db_base = BrownCS::UDB::DbBase->new;

$db_base->set_attr("hostname", "string", "req", "Hostname",
  ["The DNS hostname of this computer."]);
$db_base->set_attr("managed_by", "string", "req", "Manager",
  ["The person or group who will manage this computer."]);
$db_base->set_attr("usage", "string", "req", "Usage",
  ["How will this computer be used?"]);
$db_base->set_attr("contact", "string", "req", "Contact",
  ["The owner or primary user of this computer"]);
$db_base->set_attr("ethernet", "string", "opt", "MAC address",
  ["The computer's MAC address.",
  "If you don't know (e.g. for a xen machine), leave this blank."]);
$db_base->set_attr("ip_addr", "string", "opt", "IP",
  ["The computer's primary IP address.",
  "If you would like a random address assigned, leave this blank."]);
$db_base->set_attr("hw_arch", "string", "req", "Arch",
  ["The computer's hardware architecture."]);
$db_base->set_attr("os_type", "string", "req", "OS",
  ["The computer's primary OS."]);
$db_base->set_attr("aliases", "list", "opt", "Aliases",
  ["List any DNS aliases the computer should have."]);
$db_base->set_attr("classes", "list", "opt", "Classes",
  ["List any classes the computer should have (i.e. for tweak)."]);
$db_base->set_attr("pxelink", "string", "opt", "PXE link",
  ["If needed, specify this computer's pxelink file."]);
$db_base->set_attr("status", "string", "req", "Status",
  ["Is this computer deployed?"]);

my %default_comp = (
  "hostname" => $hostname,
  "status" => "deployed",
  "hw_arch" => "x86",
);

my $comp = $db_base->str2hash(&edit($db_base->hash2str(\%default_comp)));

print Dumper(%$comp);

END {
  $udb->finish;
}

__END__

=head1 NAME

cdb-add - Add a host to UDB

=head1 SYNOPSIS

cdb-add [-u username] hostname

=head1 DESCRIPTION

adds one or more hosts to the database

=head1 OPTIONS

=over

=item B<-h>, B<--help>

Print a help message and exit.

=item B<-u>, B<--username>=user

Logs onto the database server as the specified username, instead of as
the current user.

=back

=head1 AUTHORS

Aleks Bromfield.

=head1 SEE ALSO

B<udb>

=cut

