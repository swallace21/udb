#!/usr/bin/perl

use strict;
use warnings;

use Getopt::Long;
use Pod::Usage;

use FindBin qw($RealBin);
use lib "$RealBin/../lib";
use BrownCS::udb::Schema;
use BrownCS::udb::Util qw(:all);
use BrownCS::udb::Console qw(:all);

# Print a simple help message.
sub usage {
  my ($exit_status) = @_;
  pod2usage({ -exitval => $exit_status, -verbose => 1});
}

my $help = 0;
my $verbose = 0;
my $dryrun = 0;
my $username = $ENV{'USER'};

GetOptions ('help|h|?' => \$help, 
            'v|verbose' => \$verbose,
            'n|dryrun' => \$dryrun,
            'u|username=s' => \$username) or usage(1);
usage(0) if $help;

my $udb = BrownCS::udb::Schema->connect;


if (@ARGV != 1) {
  usage(2);
}

my $hostname = shift @ARGV;

my $device = $udb->resultset('Equipment')->find($name);
die "No record for device $name.\n" if not $device;

if ($device->protected) {
  printf("The device %s is protected!\n", $device->name);
  print "Do not modify or delete this entry unless you know what you're doing.\n";
  exit(1);
}

my $new_room = get_new(0, "room number", \&verify_location);
my $new_user = get_new(0, "room number", sub{1;});
my $new_port;

while ($new_port = get_new(0, "wall plate", sub{1;})) {

  my $port_id = $udb->query("select np.id from net_ports np where
    np.wall_plate = ?")->flat;

  if (not $port_id) {
    $new_port = undef;
    next;
  }

  my @vlans = $udb->query("select npnv.vlan_num from net_ports_net_vlans
    npnv where npnv.net_ports_id = ?")->flat;

  print "vlans are: @vlans\n";

}
    
__END__

=head1 NAME

udb-move - Perform maintenance on an existing device record in UDB

=head1 SYNOPSIS

udb-move [-u username] <device>

=head1 DESCRIPTION

Perform maintenance on an existing device record in UDB.

=head1 OPTIONS

=over

=item B<-h>, B<--help>

Print a help message and exit.

=item B<-u>, B<--username>=user

Logs onto the database server as the specified username, instead of as
the current user.

=back

=head1 AUTHORS

Aleks Bromfield.

=head1 SEE ALSO

B<udb>

=cut

