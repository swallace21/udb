#!/usr/bin/perl

use Getopt::Long;
use Pod::Usage;

use DBI qw(:sql_types);
use DBD::Pg qw(:pg_types);
use Data::Dumper;

eval('require "/tstaff/share/cdb/db.pl";');

use FindBin qw($RealBin);
use lib "$RealBin/../lib";
use BrownCS::UDB;
use BrownCS::UDB::Util qw(ask ask_password confirm);

# Print a simple help message.
sub usage {
  my ($exit_status) = @_;
  pod2usage({ -exitval => $exit_status, -verbose => 1});
}

my $help = 0;
my $username = $ENV{'USER'};
my $udb = BrownCS::UDB->new;

GetOptions ('help|h|?' => \$help,
            'u' => \$username) or usage(2);
usage(1) if $help;

my $password = &ask_password;

$udb->start($username, $password);

#$udb->{dbh}->trace(1);

print "deleting old data... ";

$udb->{dbh}->do("DELETE FROM equipment;");
$udb->{dbh}->do("DELETE FROM computers;");
$udb->{dbh}->do("DELETE FROM net_interfaces;");
$udb->{dbh}->do("DELETE FROM net_addresses;");
$udb->{dbh}->do("DELETE FROM net_addresses_net_interfaces;");
$udb->{dbh}->do("DELETE FROM net_dns_entries;");
$udb->{dbh}->do("DELETE FROM comp_classes;");
$udb->{dbh}->do("DELETE FROM comp_classes_computers;");
$udb->{dbh}->do("DELETE FROM net_zones;");
$udb->{dbh}->do("DELETE FROM net_vlans;");
$udb->{dbh}->do("DELETE FROM equip_status_types;");
$udb->{dbh}->do("DELETE FROM management_types;");
$udb->{dbh}->do("DELETE FROM routing_types;");
$udb->{dbh}->do("DELETE FROM dns_regions;");
$udb->{dbh}->do("DELETE FROM hw_arch_types;");
$udb->{dbh}->do("DELETE FROM os_types;");

print "done.\n";

print "populating static tables... ";

sub domain_insert {
  my ($table, $desc) = @_;
  my $sth = $udb->prepare("INSERT INTO $table (name) VALUES (?)");
  $sth->execute($desc);
}

sub os_insert {
  my ($desc, $pxe) = @_;
  my $sth = $udb->prepare("INSERT INTO os_types (name, pxe_boot) VALUES (?, ?)");
  $sth->execute($desc, $pxe);
}

domain_insert("equip_status_types", "deployed"),
domain_insert("equip_status_types", "spare"),
domain_insert("equip_status_types", "surplus"),

domain_insert("management_types", "tstaff"),
domain_insert("management_types", "cis"),
domain_insert("management_types", "user"),

domain_insert("routing_types", "standard");
domain_insert("routing_types", "private");
domain_insert("routing_types", "DMZ");
domain_insert("routing_types", "special");

domain_insert("dns_regions", "internal");
domain_insert("dns_regions", "external");

domain_insert("hw_arch_types", "amd64");
domain_insert("hw_arch_types", "linksys");
domain_insert("hw_arch_types", "mac");
domain_insert("hw_arch_types", "mac-ppc");
domain_insert("hw_arch_types", "sun4u");
domain_insert("hw_arch_types", "x86");
domain_insert("hw_arch_types", "xen");

os_insert("dualboot", 0);
os_insert("linux", 1);
os_insert("linux-server", 1);
os_insert("linux-xen", 1);
os_insert("osx", 0);
os_insert("solaris", 0);
os_insert("vista", 0);
os_insert("winxp", 0);

my $zone_insert = $udb->{dbh}->prepare("INSERT INTO net_zones (manager, routing_type, name, dynamic_dhcp) VALUES (?, ?, ?, ?)");
$zone_insert->bind_param(4, undef, {pg_type => PG_BOOL});

my $vlan_insert = $udb->{dbh}->prepare("INSERT INTO net_vlans (zone, vlan_num, network) VALUES (?, ?, ?)");
$vlan_insert->bind_param(2, undef, SQL_INTEGER);
$vlan_insert->bind_param(3, undef, {pg_type => PG_CIDR});

$zone_insert->execute("tstaff", "DMZ", "tstaff-dmz", 0);
$zone_insert->execute("tstaff", "private", "tstaff-private", 0);
$zone_insert->execute("tstaff", "standard", "tstaff-standard", 0);
$zone_insert->execute("user", "DMZ", "user-dmz", 0);
$zone_insert->execute("user", "private", "cs166", 0);
$zone_insert->execute("user", "special", "outside", 0);
$zone_insert->execute("user", "special", "jj-oshean", 0);
$zone_insert->execute("user", "special", "techhouse", 0);
$zone_insert->execute("user", "special", "ipsec", 0);
$zone_insert->execute("user", "standard", "user-standard", 1);

$vlan_insert->execute("tstaff-dmz", 32, "128.148.32.0/25");
$vlan_insert->execute("tstaff-private", 192, "192.168.1.0/24");
$vlan_insert->execute("tstaff-private", 898, "10.116.0.0/16");
$vlan_insert->execute("tstaff-private", 897, "192.168.10.0/24");
$vlan_insert->execute("tstaff-standard", 31, "128.148.31.0/24");
$vlan_insert->execute("tstaff-standard", 33, "128.148.33.0/24");
$vlan_insert->execute("tstaff-standard", 37, "128.148.37.0/24");
$vlan_insert->execute("tstaff-standard", 38, "128.148.38.0/24");
$vlan_insert->execute("user-dmz", 892, "128.148.32.128/25");
$vlan_insert->execute("cs166", 893, "192.168.100.0/24");
$vlan_insert->execute("outside", 34, "128.148.34.0/24");
$vlan_insert->execute("jj-oshean", 698, "198.7.242.32/28");
$vlan_insert->execute("techhouse", 360, "138.16.60.0/24");
$vlan_insert->execute("user-standard", 36, "128.148.36.0/24");
$vlan_insert->execute("ipsec", 885, "10.117.0.0/16");

print "done.\n";

print "importing cdb... ";

my($key, $data);
while ( ($key, $data) = each(%$cdb_by_hostname) ) {
  if (( $data->{'status'} ne 'disabled' ) and ($data->{'ethernet'} ne '' )) {
    print "adding host " . $data->{hostname} . "\n";
    $udb->insert_host($data);
  }
}

print "done.\n";

$udb->finish;

__END__

=head1 NAME

import-cdb - import from cdb

=head1 SYNOPSIS

import-cdb [-u username]

=head1 DESCRIPTION

imports from cdb

=head1 OPTIONS

=over

=item B<-h>, B<--help>

Print a help message and exit.

=item B<-u>, B<--username>=user

Logs onto the database server as the specified username, instead of as
the current user.

=back

=head1 AUTHORS

Aleks Bromfield.

=head1 SEE ALSO

B<udb>

=cut

