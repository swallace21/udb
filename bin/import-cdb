#!/usr/bin/perl

use Getopt::Long;
use Pod::Usage;

use DBI qw(:sql_types);
use DBD::Pg qw(:pg_types);

eval('require "/tstaff/share/cdb/db.pl";');

use lib "/home/aleks/pro/tstaff/udb/lib";
use BrownCS::UDB;
use BrownCS::UDB::Util qw(ask ask_password confirm);
use Data::Dumper;

# Print a simple help message.
sub usage {
  my ($exit_status) = @_;
  pod2usage({ -exitval => $exit_status, -verbose => 99, -sections => "SYNOPSIS|DESCRIPTION|OPTIONS"});
}

my $help = 0;
my $username = $ENV{'USER'};
my $udb = BrownCS::UDB->new;

GetOptions ('help|h|?' => \$help,
            'u' => \$username) or usage(2);
usage(1) if $help;

my $password = &ask_password;

$udb->start($username, $password);

#$udb->{dbh}->trace(1);

#
# domains
#

print "populating domains... ";

sub domain_insert {
  my ($table, $desc) = @_;
  my $sth = $udb->prepare("INSERT INTO $table (description) VALUES (?) RETURNING id");
  $sth->execute($desc);
  return $sth->fetch()->[0];
}

$udb->{dbh}->do("DELETE FROM equip_usage_types; DELETE FROM equip_status_types; delete from management_types;");

my %usage_types = (
  "tstaff" => domain_insert("equip_usage_types", "tstaff"),
  "academic" => domain_insert("equip_usage_types", "academic"),
  "personal" => domain_insert("equip_usage_types", "personal"),
);

my %status_types = (
  "deployed" => domain_insert("equip_status_types", "deployed"),
  "spare" => domain_insert("equip_status_types", "spare"),
  "surplus" => domain_insert("equip_status_types", "surplus"),
);

my %management_types = (
  "tstaff" => domain_insert("management_types", "tstaff"),
  "cis" => domain_insert("management_types", "cis"),
  "user" => domain_insert("management_types", "user"),
);

print Dumper(%$management_types);

#
# vlans and zones
#

print "creating vlans and zones... ";

$udb->{dbh}->do("DELETE FROM net_zones; DELETE FROM net_vlans;");

my $zone_insert = $udb->{dbh}->prepare("INSERT INTO net_zones (manager, routing, name) VALUES (?, ?, ?)");
$zone_insert->bind_param(1, undef, SQL_INTEGER);

my $vlan_insert = $udb->{dbh}->prepare("INSERT INTO net_vlans (zone_id, vlan_num, network) VALUES (?, ?, ?)");
$vlan_insert->bind_param(1, undef, SQL_INTEGER);
$vlan_insert->bind_param(2, undef, SQL_INTEGER);
$vlan_insert->bind_param(3, undef, {pg_type => PG_CIDR});

$zone_insert->execute($management_types{"tstaff"}, "DMZ", "tstaff-dmz");
my $tstaff_DMZ_id = $udb->{dbh}->last_insert_id(undef, undef, "net_zones", undef);

$zone_insert->execute($management_types{"tstaff"}, "private", "tstaff-private");
my $tstaff_private_id = $udb->{dbh}->last_insert_id(undef, undef, "net_zones", undef);

$zone_insert->execute($management_types{"tstaff"}, "standard", "tstaff-standard");
my $tstaff_standard_id = $udb->{dbh}->last_insert_id(undef, undef, "net_zones", undef);

$zone_insert->execute($management_types{"user"}, "DMZ", "user-dmz");
my $user_DMZ_id = $udb->{dbh}->last_insert_id(undef, undef, "net_zones", undef);

$zone_insert->execute($management_types{"user"}, "private", "cs166");
my $cs166_id = $udb->{dbh}->last_insert_id(undef, undef, "net_zones", undef);

$zone_insert->execute($management_types{"user"}, "special", "outside");
my $outside_id = $udb->{dbh}->last_insert_id(undef, undef, "net_zones", undef);

$zone_insert->execute($management_types{"user"}, "special", "jj-oshean");
my $jj_id = $udb->{dbh}->last_insert_id(undef, undef, "net_zones", undef);

$zone_insert->execute($management_types{"user"}, "special", "techhouse");
my $techhouse_id = $udb->{dbh}->last_insert_id(undef, undef, "net_zones", undef);

$zone_insert->execute($management_types{"user"}, "special", "ipsec");
my $ipsec_id = $udb->{dbh}->last_insert_id(undef, undef, "net_zones", undef);

$zone_insert->execute($management_types{"user"}, "standard", "user-standard");
my $user_standard_id = $udb->{dbh}->last_insert_id(undef, undef, "net_zones", undef);

$vlan_insert->execute($tstaff_DMZ_id, 32, "128.148.32.0/25");
$vlan_insert->execute($tstaff_private_id, 192, "192.168.1.0/24");
$vlan_insert->execute($tstaff_private_id, 898, "10.116.0.0/16");
$vlan_insert->execute($tstaff_private_id, 897, "192.168.10.0/24");
$vlan_insert->execute($tstaff_standard_id, 31, "128.148.31.0/24");
$vlan_insert->execute($tstaff_standard_id, 33, "128.148.33.0/24");
$vlan_insert->execute($tstaff_standard_id, 37, "128.148.37.0/24");
$vlan_insert->execute($tstaff_standard_id, 38, "128.148.38.0/24");
$vlan_insert->execute($user_DMZ_id, 892, "128.148.32.128/25");
$vlan_insert->execute($cs166_id, 893, "192.168.100.0/24");
$vlan_insert->execute($outside_id, 34, "128.148.34.0/24");
$vlan_insert->execute($jj_id, 698, "198.7.242.32/28");
$vlan_insert->execute($techhouse_id, 360, "138.16.60.0/24");
$vlan_insert->execute($user_standard_id, 36, "128.148.36.0/24");
$vlan_insert->execute($ipsec_id, 885, "10.117.0.0/16");

print "done.\n";

#
# cdb
# 

print "importing cdb... ";

$udb->{dbh}->do("DELETE FROM equipment;");
$udb->{dbh}->do("DELETE FROM computers;");
$udb->{dbh}->do("DELETE FROM net_interfaces;");
$udb->{dbh}->do("DELETE FROM net_addresses;");
$udb->{dbh}->do("DELETE FROM net_addresses_net_interfaces;");
$udb->{dbh}->do("DELETE FROM net_dns_entries;");
$udb->{dbh}->do("DELETE FROM comp_classes;");
$udb->{dbh}->do("DELETE FROM comp_classes_computers;");

my($key, $data);
while ( ($key, $data) = each(%$cdb_by_hostname) ) {
  if (( $data->{'status'} ne 'disabled' ) and ($data->{'ethernet'} ne '' )) {
    print "adding host " . $data->{hostname} . "\n";
    $udb->insert_host($data);
  }
}

print "done.\n";

$udb->finish;

__END__

=head1 NAME

import-cdb - import from cdb

=head1 SYNOPSIS

import-cdb [-u username]

=head1 DESCRIPTION

imports from cdb

=head1 OPTIONS

=over

=item B<-h>, B<--help>

Print a help message and exit.

=item B<-u>, B<--username>=user

Logs onto the database server as the specified username, instead of as
the current user.

=back

=head1 AUTHORS

Aleks Bromfield.

=head1 SEE ALSO

B<udb>

=cut

